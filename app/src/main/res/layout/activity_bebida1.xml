<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondooooo"
    android:gravity="center"
    tools:context=".ui.sv.bebida1"
    tools:ignore="MissingClass">

    <TextView
        android:layout_width="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center"
        tools:context=".ui.sv.bebida1"
        tools:ignore="MissingClass"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:id="@+id/txtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFRESCO DE CEBADA"
        android:textColor="#FFBB86FC"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_marginLeft="10dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="48dp"
        />


    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fresco de Cebada"
        android:textSize="30dp"
        android:textColor="#673AB7"
        android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cebada"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:text="INGREDIENTES:"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="@string/receta_bebida1" />
        </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>